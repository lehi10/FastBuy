<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/humo4"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearItemHistorialPedidos"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blanco"
        android:layout_marginBottom="2dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtNumOrdenMiPedido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="2dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Orden Nº 000010"
                    android:textAllCaps="false"
                    android:textColor="@color/gris"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/txtTotalMiPedido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="s/30.00"
                    android:textAllCaps="false"
                    android:textColor="@color/gris"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginTop="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:paddingRight="15dp">
                    <TextView
                        android:id="@+id/txtMiPedidoE1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Chepen - D'Costumbre"
                        android:textColor="@color/gris"
                        android:textSize="14sp"
                        android:lines="1"
                        android:maxLines="1"/>
                    <TextView
                        android:id="@+id/txtMiPedidoE2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Chepen - Don Juan Café"
                        android:textColor="@color/gris"
                        android:textSize="14sp"
                        android:visibility="gone"
                        android:lines="1"
                        android:maxLines="1"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/btnVerDetalleMiPedido"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-condensed"
                    android:text="   detalles de Pedido"
                    android:textColor="@color/gris"
                    android:textSize="14sp"
                    android:drawableStart="@drawable/ic_eye_yellow"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>