<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/humo_suave"
    android:layout_height="match_parent"
    tools:context="com.fastbuyapp.omar.fastbuy.FragmentSubCategoriaEmpresas"
    android:id="@+id/PanelContenedorEmpresas">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/PanelCategoriaEmpresas"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:text="Seleccione una sub categorÃ­a"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtNameEmpresa" />

        <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tablaRubros"
            android:columnWidth="150dip"
            android:gravity="center"
            android:numColumns="auto_fit"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:padding="0dp"/>
    </LinearLayout>

</LinearLayout>
