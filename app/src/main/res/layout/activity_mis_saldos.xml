<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MisSaldosActivity">
    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blanco"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="35dp"
        android:paddingVertical="10dp"
        android:background="@color/fastbuy">
        <TextView
            android:id="@+id/txtNameUserSaldos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Juan Pérez Martinez"
            android:maxLines="1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/blanco"/>
        <TextView
            android:id="@+id/txtNumberUserSaldos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_phone_white"
            android:text="956823123"
            android:textSize="18sp"
            android:textColor="@color/blanco"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Codigo Cupón"
                android:paddingLeft="35dp"
                android:layout_weight="1"
                android:paddingRight="10dp"
                android:textColor="@color/gris"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="left"/>
            <TextView
                android:id="@+id/txtLugarFin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="40dp"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:fontFamily="sans-serif-condensed"
                android:text="Stock"
                android:textStyle="bold"
                android:textColor="@color/gris"
                android:textSize="16sp"/>
        </LinearLayout>
        <GridView
            android:id="@+id/gridMisSaldos"
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="25dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <!--Start MmenuPrincipal-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#999"
        android:layout_height="50dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnHome"
            android:background="#e9e9e9"
            android:layout_weight="1"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_shop_n" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnFavoritos"
            android:background="#e9e9e9"
            android:layout_weight="1"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_heart"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnCarrito"
            android:background="#e9e9e9"
            android:layout_weight="1"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_cart_shop"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnUsuario"
            android:background="#e9e9e9"
            android:layout_weight="1"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_user_circle_o"
            android:tint="@color/fastbuy" />
    </LinearLayout>
    <!--End MmenuPrincipal-->
</LinearLayout>