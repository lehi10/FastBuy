<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fastbuyapp.omar.fastbuy.SplashActivity"
    android:background="@color/exito">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_height="250dp"
            android:layout_width="match_parent"
            app:lottie_fileName="carr2.json"
            app:lottie_loop="false"
            app:lottie_autoPlay="true"/>

        <TextView
            android:text="FAST BUY"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:id="@+id/lblFastBuy"
            android:textColor="@color/blanco"
            android:textSize="40dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:textAlignment="center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:text="Valoramos tu tiempo"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:layout_height="42dp"
            android:textColor="@color/blanco"
            android:id="@+id/lbleslogan"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/lblFastBuy"
            tools:layout_editor_absoluteX="0dp" />
    </LinearLayout>

</RelativeLayout>
