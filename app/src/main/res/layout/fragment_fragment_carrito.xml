            android:padding="0dp"
            android:columnWidth="500dp"
            android:gravity="center"
            android:id="@+id/gvTablaProductosPedidos"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:layout_margin="0dp" />

    </LinearLayout>

