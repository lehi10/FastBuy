<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_encargo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TransporteActivity"
    android:background="@color/blanco">

    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blanco"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar" />

    <TextView
        android:id="@+id/text_transporte_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_transporte"
        android:textColor="@color/blanco"
        android:gravity="center"
        android:paddingHorizontal="40dp"
        android:paddingVertical="12dp"
        android:background="@color/verde_fosforescente"
        android:visibility="visible"
        />


    <ScrollView

        android:id="@+id/scrollGeneralTransportes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/toolbarTransparent"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/linerAnimacionTransporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="30dp"
                android:visibility="visible">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animation_view"
                    app:lottie_imageAssetsFolder="assets"
                    app:lottie_fileName="moving-car.json"
                    app:lottie_loop="false"
                    android:layout_gravity="center_horizontal"
                    app:lottie_autoPlay="true"
                    android:layout_margin="0dp"
                    android:scaleType="fitCenter"
                    android:layout_width="200dp"
                    android:layout_height="200dp"/>

                <TextView
                    android:text="Solicitar un Taxi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_weight="0.00"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp" />

                <TextView
                    android:text="@string/text_descrip_transporte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:paddingHorizontal="40dp"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearFlotanteTransporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:paddingBottom="30dp"
                android:elevation="1dp">
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/btnCajaAnimationTransporte"
                    app:lottie_imageAssetsFolder="assets"
                    app:lottie_fileName="button_box_encargo.json"
                    app:lottie_loop="true"
                    android:layout_gravity="center_horizontal"
                    app:lottie_autoPlay="true"
                    android:scaleType="fitXY"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/circulo_amarillo"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearGenerarTransporte"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <!--Start Cuadro Encargo-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="340dp"
                    android:orientation="vertical"
                    android:background="@drawable/cuadro_encargo"
                    android:layout_marginHorizontal="20dp"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="25dp">

                    <ScrollView
                        android:id="@+id/scrollTransporte"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/toolbarTransparent">


                            <!--Start Ubicación Inicial-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp">
                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_location_gris"/>
                                <TextView
                                    android:id="@+id/txtUbicacion"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:hint="Seleccione su ubicación"
                                    android:paddingRight="15dp"
                                    android:paddingLeft="15dp"
                                    android:textSize="14sp"
                                    android:gravity="center_vertical"
                                    android:maxLines="1"
                                    android:inputType="none"
                                    style="?android:listSeparatorTextViewStyle" />


                            </LinearLayout>
                            <!--End Ubicación Inicial-->

                            <!--Start Destino -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp">
                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_location_gris"/>

                                <TextView
                                    android:id="@+id/txtDestino"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:gravity="center_vertical"
                                    android:hint="Seleccione su Destino"
                                    android:maxLines="1"
                                    android:paddingLeft="15dp"
                                    android:paddingRight="15dp"
                                    android:textSize="14sp"
                                    style="?android:listSeparatorTextViewStyle"/>
                            </LinearLayout>
                            <!--End Destino-->

                            <!--Start Tarifa-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp">
                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_phone_gris"/>
                                <TextView
                                    android:id="@+id/txtTarifa"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:hint="Tarifa de Servicio"
                                    android:paddingRight="15dp"
                                    android:paddingLeft="15dp"
                                    android:textSize="14sp"
                                    android:gravity="center_vertical"
                                    android:layout_marginBottom="5dp"
                                    android:maxLines="1"
                                    android:maxLength="9"
                                    style="?android:listSeparatorTextViewStyle"/>
                            </LinearLayout>
                            <!--End Tarifa-->

                            <!-- Método de Pago -->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp">
                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_phone_gris"/>
                                <TextView
                                    android:id="@+id/txtMetodo_Pago"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:hint="Método de Pago"
                                    android:paddingRight="15dp"
                                    android:paddingLeft="15dp"
                                    android:textSize="14sp"
                                    android:gravity="center_vertical"
                                    android:layout_marginBottom="5dp"
                                    android:maxLines="1"
                                    android:maxLength="9"
                                    style="?android:listSeparatorTextViewStyle"/>
                            </LinearLayout>

                            <!--Start Comentarios y deseos-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp">
                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_phone_gris"/>
                                <TextView
                                    android:id="@+id/txtComentarios_y_deseos"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:hint="Comentarios y deseos"
                                    android:paddingRight="15dp"
                                    android:paddingLeft="15dp"
                                    android:textSize="14sp"
                                    android:inputType="number"
                                    android:gravity="center_vertical"
                                    android:layout_marginBottom="5dp"
                                    android:maxLines="1"
                                    android:maxLength="9"
                                    style="?android:listSeparatorTextViewStyle"/>
                            </LinearLayout>
                            <!--End Tarifa-->


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp">

                                <Button
                                    android:id="@+id/button_confirmar_transporte"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:background="@drawable/boton_verde"
                                    android:layout_marginHorizontal="30dp"
                                    android:layout_marginVertical="15dp"
                                    android:text="Solicitar Taxi"
                                    android:textColor="@color/blanco"
                                    android:textAllCaps="false"
                                    android:textSize="7pt"
                                    android:gravity="center"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>
            </LinearLayout>





        </LinearLayout>


    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#999"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#e9e9e9"
            android:padding="12dp"
            android:tint="@color/fastbuy"
            app:srcCompat="@drawable/ic_shop_n" />

        <ImageButton
            android:id="@+id/btnFavoritos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#e9e9e9"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_heart" />

        <ImageButton
            android:id="@+id/btnCarrito"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#e9e9e9"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_cart_shop" />

        <ImageButton
            android:id="@+id/btnUsuario"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#e9e9e9"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_user_circle_o" />
    </LinearLayout>


</LinearLayout>