<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/blanco"
    android:layout_weight="1"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:elevation="1dp"
        android:background="@color/toolbarTransparent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@drawable/rsst"
            android:id="@+id/imageViewPortada"
            android:scaleType="fitXY"
            android:layout_height="80dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@color/toolbarTransparent">

            <ImageView
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imgEmpresas2"
                android:adjustViewBounds="false"
                android:layout_width="70dp"
                android:layout_height="70dp" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/cuadro_base_text_empresa"
        android:layout_marginRight="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp">
        <TextView
            android:text="Nombre_Empresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtNombreEmpresa"
            android:maxLines="1"
            android:paddingTop="5dp"
            android:textColor="@color/gris"
            android:fontFamily="sans-serif-condensed"
            android:textSize="13sp"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="Descripcion de empresa"
                android:layout_height="wrap_content"
                android:id="@+id/txtDescripcion"
                android:textColor="@color/gris"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:layout_marginBottom="2dp"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif-condensed"
                android:layout_width="match_parent"
                android:textSize="11sp"
                android:layout_weight="1" />
            <TextView
                android:text="Abierto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblEstadoAbierto"
                android:layout_marginTop="2dp"
                android:textColor="@color/fastbuy"
                android:background="@color/etiqueta"
                android:fontFamily="sans-serif-condensed"
                android:padding="3dp"
                android:layout_gravity="center_vertical"
                android:textSize="10sp"
                android:layout_marginRight="5dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>