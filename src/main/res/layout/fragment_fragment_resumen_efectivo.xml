<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:background="@color/humo_suave"
    tools:context="com.fastbuyapp.omar.fastbuy.FragmentResumenEfectivo"
    android:id="@+id/fragmentResumen">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_weight="0.9"
                android:layout_height="match_parent">

                <TextView
                    android:text="Forma de pago: EFECTIVO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblFormaPago"
                    android:textStyle="normal|bold"
                    android:padding="15dp" />

                <ImageView
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_efectivo"
                    android:id="@+id/imgPago"
                    android:layout_width="200dp"
                    android:layout_height="90dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingTop="7dp"
                    android:background="@drawable/panelcostos"
                    android:layout_marginBottom="5dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Nombres y Apellidos"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:id="@+id/lblText3" />

                        <TextView
                            android:text="Omar Antonio Vera Vásquez"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/lblNombreUsuario"
                            android:layout_weight="1"
                            android:textAlignment="textEnd" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:weightSum="2"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Dirección"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/lblText1"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:textSize="12dp" />

                        <TextView
                            android:text="Av. Manuel Seoane #1220"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/lblDireccionCLiente"
                            android:layout_weight="1"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:textAlignment="textEnd" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:weightSum="2"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:id="@+id/lblText2" />

                        <TextView
                            android:text="Guadalupe"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/lblCiudadOrigen"
                            android:layout_weight="1"
                            android:textAlignment="textEnd" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingTop="7dp"
                    android:background="@drawable/panelcostos"
                    android:layout_marginBottom="5dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:weightSum="2"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Compra"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:id="@+id/lblCompra" />

                        <TextView
                            android:text="S/ 0.00"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/lblCompraMonto"
                            android:layout_weight="1"
                            android:textAlignment="textEnd" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:weightSum="2"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Delivery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:id="@+id/lblDelivery" />

                        <TextView
                            android:text="S/ 0.00"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/lblCompraDelivery"
                            android:layout_weight="1"
                            android:textAlignment="textEnd" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:weightSum="2"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:layout_height="25dp">

                        <TextView
                            android:text="Cargo"
                            android:layout_width="match_parent"
                            android:layout_height="31dp"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:id="@+id/lblCargo" />

                        <TextView
                            android:text="S/ 0.00"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/lblCompraCargo"
                            android:layout_weight="1"
                            android:textAlignment="textEnd" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:paddingTop="7dp"
                    android:background="@drawable/panelcostos"
                    android:layout_marginBottom="5dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:weightSum="2"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:layout_height="25dp">

                        <TextView
                            android:text="Total"
                            android:layout_width="match_parent"
                            android:layout_height="31dp"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:id="@+id/lblTotal" />

                        <TextView
                            android:text="S/ 0.00"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/lblCompraTotal"
                            android:layout_weight="1"
                            android:textAlignment="textEnd" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:padding="5dp"

        android:layout_height="150dp">

        <Button
            android:text="Generar"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:textColor="@color/blanco"
            android:background="@drawable/botoncontrol"
            android:layout_height="50dp"
            android:id="@+id/btnGenerarPedido"
            android:layout_width="300dp" />
    </LinearLayout>

</LinearLayout>
