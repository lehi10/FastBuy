<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_carrito"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blanco"
    tools:context="com.fastbuyapp.omar.fastbuy.CarritoActivity">

    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blanco"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.09">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="Detalles de tu Lista"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/cuadrodetallepedido"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Productos"
                    android:textStyle="bold"
                    android:textColor="@color/negro"
                    android:textSize="17sp"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:layout_marginLeft="25dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Precio"
                    android:textStyle="bold"
                    android:textColor="@color/negro"
                    android:textSize="17sp"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_marginRight="50dp"/>
            </LinearLayout>

            <GridView
                android:id="@+id/dtgvListaPedido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:numColumns="1"
                android:paddingHorizontal="10dp"
                android:paddingBottom="25dp"></GridView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.001">
        <!--Start Total-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="TOTAL DE LA ORDEN"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/blanco"
            android:background="@color/amarillo"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingHorizontal="40dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subtotal"
                android:textStyle="bold"
                android:textColor="@color/negro"
                android:textSize="15sp"
                android:gravity="left"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txtTotalPedido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="s/0.00"
                android:textStyle="bold"
                android:textColor="@color/negro"
                android:textSize="15sp"
                android:gravity="right"
                android:layout_weight="1"/>
        </LinearLayout>
        <!--End Total-->

        <Button
            android:id="@+id/btnComprar"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/botonverde2"
            android:text="Comprar"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textColor="@color/blanco"
            android:layout_marginVertical="20dp"/>
    </LinearLayout>

    <!--Start Botones del menu-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#999"
        android:layout_height="50dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnHome"
            android:background="#e9e9e9"
            android:layout_weight="1"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_shop_n" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnFavoritos"
            android:background="#e9e9e9"
            android:layout_weight="1"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_heart"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnCarrito"
            android:background="#e9e9e9"
            android:layout_weight="1"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_cart_shop"
            android:tint="@color/fastbuy" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnUsuario"
            android:background="#e9e9e9"
            android:layout_weight="1"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_user_circle_o"/>
    </LinearLayout>
    <!--End Botones del menu-->

</LinearLayout>
